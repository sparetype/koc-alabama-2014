<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.2" type="template" client="site">
	<name>knights2014</name>
	<version>1.0</version>
	<creationDate>12/01/2013</creationDate>
	<author>Griffin Shreves III</author>
	<authorEmail>griffin@sparetype.com</authorEmail>
	<copyright>Copyright (C) 2013 SpareType All rights reserved.</copyright>
	<description>Based on Protostar - the default Joomla 3 site template - this is a customized version for the 2014 redesign of kofc-alabama.org</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#005195"
					label="Template Colour"
					description="Choose an overall colour for the site template. If left blank the Default (#005195) is used." />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="Background Color"
					description="Choose a background colour for static layouts. If left blank the Default (#F4F6F7) is used." />

				<field name="logoFile" class="" type="media" default=""
					label="Logo"
					description="Upload a custom logo for the site template." />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="Google Font for Headings"
					description="Load a Google font for the headings (H1, H2, H3, etc.)"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Source+Sans+Pro"
					label="Google Font Name"
					description="Example: Open+Sans or Source+Sans+Pro" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="Fluid Layout"
					description="Use Bootstrap's Fluid or Static Container (both are Responsive)"
				>
					<option value="0">Static</option>
					<option value="1">Fluid</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
